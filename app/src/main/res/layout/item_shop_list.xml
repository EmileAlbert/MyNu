<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_sl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="2dp">

            <EditText
                android:id="@+id/rc_sl_item_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"

                android:hint="@string/shopping_list_items_name"
                style="@style/item_text"

                android:layout_marginLeft="0dp"
                android:paddingLeft="2dp"
                android:layout_marginStart="0dp"
                android:paddingStart="2dp"

                android:focusableInTouchMode="true"
                android:focusable="true"
                android:inputType="textCapSentences"
                android:imeOptions="actionNext"

                tools:text="Item"
                tools:ignore="RtlSymmetry"/>

            <EditText
                android:id="@+id/rc_sl_item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:hint="@string/shopping_list_items_quantity"
                style="@style/item_text"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rc_sl_item_name"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/rc_sl_item_name"

                android:focusableInTouchMode="true"
                android:focusable="true"
                android:inputType="text"
                android:imeOptions="actionDone"

                tools:text="3"/>

            <CheckBox
                android:id="@+id/rc_sl_item_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="40dp"
                android:layout_marginEnd="40dp"
                android:layout_alignBaseline="@+id/rc_sl_item_name"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>